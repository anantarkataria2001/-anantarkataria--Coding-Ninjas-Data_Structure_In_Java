
public class solution {

	public static int countZerosRec(int input){
		// Write your code here
        if(input==0)
            return 1;
        else if(input<10 && input>-10)
            return 0;
        else 
            return countZerosRec(input/10) + countZerosRec(input%10);
    }
     public static void main(String[] args){
		System.out.println();
}
}
